<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Label 
            Text="Register"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Name" WidthRequest="200" Margin="0,10,0,0"/>
        <Entry Placeholder="Surname" WidthRequest="200" Margin="0,10,0,0"/>
        <Entry Placeholder="Username" WidthRequest="200" Margin="0,10,0,0"/>
        <Entry Placeholder="Password" WidthRequest="200" IsPassword="True" Margin="0,10,0,0"/>
        <Button Text="Register" WidthRequest="100" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>