<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Label 
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Entry x:Name="usrname" Placeholder="Username" WidthRequest="200" Margin="0,10,0,0"/>
        <Entry x:Name="passwd" Placeholder="Password" WidthRequest="200" IsPassword="True" Margin="0,10,0,0"/>
        <Button Clicked="LoginClicked" WidthRequest="200" Text="Login" Margin="0,10,0,0"/>
        <Button Background="Transparent"
                TextColor="Purple"
                Clicked="RegisterClicked"
                Text="Register"/>
    </VerticalStackLayout>
</ContentPage>